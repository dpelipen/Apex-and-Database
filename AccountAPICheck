public with sharing class AccountAPICheck {
    //String token = '00D7Q000003Pw6b!ARsAQH.78c7UYaO8SCalgo67ZVlEaFRoVk6fURNBEOQlZHL9nsD62d1Nm5bgiJmsTCfHGMFu1is6IOBTyfTnhxu6VnYaeimB';
    public static Http http = new Http();
    public static HTTPResponse response;
    public static HttpRequest request;
 
    public class NewAccountRequestWrapper {
        public String name {get; set;}
        public String phone {get; set;}
        public String website{get; set;}
    }
 
    public static void getAccount(Id accId) {
        //String token = '00D7Q000003Pw6b!ARsAQH.78c7UYaO8SCalgo67ZVlEaFRoVk6fURNBEOQlZHL9nsD62d1Nm5bgiJmsTCfHGMFu1is6IOBTyfTnhxu6VnYaeimB';
        request = new HttpRequest();
        request.setEndpoint('callout:SFcreds/services/apexrest/Account/'+ accId);
        request.setMethod('GET');
        //request.setHeader('Authorization', 'OAuth '+UserInfo.getSessionId() + token);
        response = http.send(request); 
 
        System.debug(response.getBody());
    }
 
    public static void addAccount(NewAccountRequestWrapper newAccount) {
 
        request = new HttpRequest();
        request.setMethod('POST');
        request.setEndpoint('callout:SFcreds/services/apexrest/Account');
        request.setHeader('Content-Type', 'application/json;charset=UTF-8');
        request.setBody(JSON.serialize(newAccount));
 
        response = http.send(request); 
 
        System.debug(response.getBody());
    }
 
    public static void deleteAccount(Id accId) {
 
        request = new HttpRequest();
        request.setMethod('DELETE');
        request.setEndpoint('callout:SFcreds/services/apexrest/Account/' + accId);
 
        response = http.send(request); 
 
        System.debug(response.getBody());
    }
 
}
